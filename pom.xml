                        <source>${maven.aspectj.version}</source>
                        <target>${maven.aspectj.version}</target>
                        <encoding>${project.build.sourceEncoding}</encoding>
                        <showWeaveInfo>true</showWeaveInfo>
                    </configuration>
                    <executions>
                        <execution>
